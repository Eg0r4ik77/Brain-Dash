<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mainmenu.MainMenu"
    android:background="@drawable/gradient_background">


    <LinearLayout
        android:id="@+id/main_buttons_layout"
        android:layout_width="221dp"
        android:layout_height="240dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="230dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/battle_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:fontFamily="@font/button_font"
            android:textSize="20sp"
            android:backgroundTint="@color/purple_2"
            android:text="@string/battle" />

        <Button
            android:id="@+id/training_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/button_font"
            android:textSize="20sp"
            android:layout_marginBottom="5dp"
            android:backgroundTint="@color/purple_2"
            android:text="@string/training" />

        <Button
            android:id="@+id/warm_up_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_weight="1"
            android:fontFamily="@font/button_font"
            android:backgroundTint="@color/purple_2"
            android:text="@string/warm_up"
            />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/games_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</RelativeLayout>
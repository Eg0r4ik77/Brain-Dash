<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mainmenu.gamemodes.calculationsmodegames.CalculationsModeGamesMenu"
    android:background="@color/purple">

    <LinearLayout
        android:id="@+id/calculations_mode_games_layout"
        android:layout_width="221dp"
        android:layout_height="240dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="230dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/calculate_expression_game"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:backgroundTint="@color/purple_2"
            android:text="@string/calculate_expression_game"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/moneybox_game"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginBottom="5dp"
            android:backgroundTint="@color/purple_2"
            android:text="@string/moneybox_game"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/plus_or_minus_game"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/purple_2"
            android:text="@string/plus_or_minus_game"
            android:textAllCaps="false"/>
    </LinearLayout>

</RelativeLayout>